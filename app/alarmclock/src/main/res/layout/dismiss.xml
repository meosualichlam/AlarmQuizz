<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <!-- Header với nút quay lại và tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Đóng"
                android:layout_gravity="center"
                android:padding="@dimen/padding"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/morning" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dismissText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dismiss"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Hãy chọn cách bạn muốn tắt báo thức.
            Nếu bạn muốn chắc chắn mình sẽ tỉnh, thử thách não bộ bằng việc giải đố nhằm tắt báo thức đi"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"/>

        <!-- CardView chọn loại thử thách -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/textColor"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/quizTypeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="THỬ THÁCH"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/selectedQuizText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:background="@android:color/transparent"
                    android:text="Chọn"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:clickable="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cài đặt"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tự động tắt: Báo thức của bạn nên kéo dài bao lâu? Sau khoảng thời gian này chúng tôi sẽ tự động tắt báo thức đi."
                android:textSize="@dimen/text_size"
                android:textColor="@color/textColor"/>
            <Spinner
                android:id="@+id/spinnerDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>